<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_news"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_item_news"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imvImage"
        android:background="@color/teal_700"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/width_imageview_item"
        android:layout_height="@dimen/height_imageview_item"/>

    <TextView
        android:id="@+id/tv_page"
        android:text="VN Express"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toRightOf="@+id/imvImage"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_news"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_pubDate_news"/>

    <TextView
        android:id="@+id/tv_title_news"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_title_news"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        android:maxLines="3"
        android:text="title "
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintLeft_toRightOf="@+id/imvImage"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_pubDate"
        android:text="date here"
        android:textSize="12sp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_page"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_pubDate_news"/>


</androidx.constraintlayout.widget.ConstraintLayout>